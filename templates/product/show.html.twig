{% extends 'base.html.twig' %}

{% block title %}{{ product.name }}{% endblock %}

{% block content %}
    <h1>{{ product.name }}</h1>

    <div class="row product-bottom ">
        <div class="col md-5">
            <img src="/uploads/images/{{ product.illustration }}" alt="{{ product.name }}" class="img-fluid">
        </div>
        <div class="col md-7 my-auto">
            <h3>{{ product.name }}</h3>
            <p>{{ product.subtitle }}</p>
            <span class="product-page-price">{{ (product.price / 100) | number_format(2, ',', '.') }} â‚¬</span>
            <br/>
            <br/>
            <p>
                {{ product.description }}
            </p>
            <a href="{{ path('add_to_cart', {'id' : product.id}) }}"><button type="submit" class="btn btn-primary">Ajouter au panier</button></a>
        </div>
    </div>

{% endblock %}